{
  "name": "lambda-tests",
  "version": "1.0.0",
  "description": "Tests for Lambda functions",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "aws-sdk-client-mock": "^3.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.490.0",
    "@aws-sdk/client-cloudwatch": "^3.490.0",
    "joi": "^17.11.0",
    "isomorphic-dompurify": "^2.6.0",
    "validator": "^13.11.0",
    "pino": "^8.16.2",
    "uuid": "^9.0.1",
    "async-retry": "^1.3.3",
    "opossum": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../**/*.js",
      "!../node_modules/**",
      "!../tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}